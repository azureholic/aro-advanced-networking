# Azure Service Principal Configuration
CLIENT_ID=your-service-principal-client-id
CLIENT_SECRET=your-service-principal-client-secret

# Azure Deployment Configuration
# Split Resource Group Configuration
NETWORK_RESOURCE_GROUP_NAME=rg-network
CLUSTER_RESOURCE_GROUP_NAME=rg-cluster
LOCATION=uksouth
SUBSCRIPTION_ID=your-subscription-id

# ARO Cluster Configuration
ARO_CLUSTER_NAME=aro-cluster
# DOMAIN will use Azure default: ${ARO_CLUSTER_NAME}.${LOCATION}.aroapp.io
CLUSTER_RESOURCES_RG_NAME=

# Network Configuration
VNET_NAME=vnet-aro-cluster
VNET_ADDRESS_PREFIX=10.0.0.0/16

# VM Sizing
MASTER_VM_SIZE=Standard_D8s_v5
WORKER_VM_SIZE=Standard_D4s_v5
WORKER_NODE_COUNT=3

# Visibility Settings
API_SERVER_VISIBILITY=Public
INGRESS_VISIBILITY=Public

# Deployment Options
SKIP_VALIDATION=false
DEPLOY_INFRASTRUCTURE_ONLY=false
